{% extends 'base.html.twig' %}

{% block title %}Games index{% endblock %}

{% block body %}
    <h1>Games index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PegiRating</th>
                <th>Price</th>
                <th>Multiplayer</th>
                <th>LastUpdateVersion</th>
                <th>ESport</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.Name }}</td>
                <td>{{ game.PegiRating }}</td>
                <td>{{ game.Price }}</td>
                <td>{{ game.Multiplayer ? 'Yes' : 'No' }}</td>
                <td>{{ game.LastUpdateVersion }}</td>
                <td>{{ game.ESport ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('games_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('games_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('games_new') }}">Create new</a>
{% endblock %}
