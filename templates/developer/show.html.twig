{% extends 'base.html.twig' %}

{% block title %}Developer{% endblock %}

{% block body %}
    <img class="responsive-img" src="https://sites.google.com/site/disasterbot0101/_/rsrc/1502124923061/game-design/class-introduction/Games-Banner-1140x400.png">
    <h1>Développeur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ developer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ developer.Name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ developer.Country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('developer_index') }}"><span class="new badge pink darken-4" data-badge-caption="Retour à la liste"></span></a>
    <a href="{{ path('developer_edit', {'id': developer.id}) }}"><span class="new badge pink darken-4" data-badge-caption="Modifier"></span></a>

    {{ include('developer/_delete_form.html.twig') }}
{% endblock %}
