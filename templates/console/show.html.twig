{% extends 'base.html.twig' %}

{% block title %}Console{% endblock %}

{% block body %}
    <h1>Console</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ console.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ console.Name }}</td>
            </tr>
            <tr>
                <th>FreeOnline</th>
                <td>{{ console.FreeOnline ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ console.Price }}</td>
            </tr>
            <tr>
                <th>Retrocompability</th>
                <td>{{ console.Retrocompability ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('console_index') }}">back to list</a>

    <a href="{{ path('console_edit', {'id': console.id}) }}">edit</a>

    {{ include('console/_delete_form.html.twig') }}
{% endblock %}
