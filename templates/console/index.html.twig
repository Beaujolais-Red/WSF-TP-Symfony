{% extends 'base.html.twig' %}

{% block title %}Console index{% endblock %}

{% block body %}
    <h1>Console index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FreeOnline</th>
                <th>Price</th>
                <th>Retrocompability</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for console in consoles %}
            <tr>
                <td>{{ console.id }}</td>
                <td>{{ console.Name }}</td>
                <td>{{ console.FreeOnline ? 'Yes' : 'No' }}</td>
                <td>{{ console.Price }}</td>
                <td>{{ console.Retrocompability ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('console_show', {'id': console.id}) }}">show</a>
                    <a href="{{ path('console_edit', {'id': console.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('console_new') }}">Create new</a>
{% endblock %}
